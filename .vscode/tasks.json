{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run FastAPI Server",
			"type": "shell",
			"command": "uvicorn inference_core.main_factory:create_application --factory --host 0.0.0.0 --port 8000 --workers 4",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Run FastAPI Development Server (Poetry)",
			"type": "shell",
			"command": "poetry run uvicorn inference_core.main_factory:create_application --factory --reload --host 0.0.0.0 --port 8000",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Celery: Start Worker",
			"type": "shell",
			"command": "poetry run celery -A inference_core.celery.celery_main:celery_app worker --loglevel=info",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Celery: Start Beat",
			"type": "shell",
			"command": "poetry run celery -A inference_core.celery.celery_main:celery_app beat --loglevel=info",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Celery: Start Worker (DEBUG)",
			"type": "shell",
			"command": "export DEBUG_CELERY=1 && poetry run celery -A inference_core.celery.celery_main:celery_app worker --concurrency=1 --loglevel=info",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}
